@model IEnumerable<ProyectoHDP.Models.Empleados>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipoContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.empresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaRenuncia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaEmision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mesesTrabajo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipoContrato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaContrato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaRenuncia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaEmision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mesesTrabajo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.iD">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.iD">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.iD">Delete</a>
            </td>
        </tr>
}
        

    </tbody>
</table>
<div class="d-flex flex-column">
    <a href="@Url.Action("DownloadAllUsersTextFile", "Empleados")" class="btn btn-primary mb-3">Download All Users</a>

    <form action="/Empleados/DownloadAllUsersByEmpresaTextFile" method="get" class="mb-3">
        <div class="form-group">
            <label for="empresa">Compañia:</label>
            <input type="text" name="empresa" id="empresa" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary w-100">Descargar usuarios por compañia</button>
    </form>

    <form action="/Empleados/DownloadAllUsersByYearTextFile" method="get">
        <div class="form-group">
            <label for="SearchYear">Año:</label>
            <input type="datetime-local" name="SearchYear" id="SearchYear" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary w-100">Descargar usuarios por año</button>
    </form>
</div>